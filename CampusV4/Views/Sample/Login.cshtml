@using CampusV4.Models
@model LoginViewModel

@{
    ViewBag.Title = "ログイン";
}

@{
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <div class="form-group" style="text-align:center;">
                <div class="col-md-12">
                    <label class="control-label text-nowrap"><font size="5">CAMPUSにログインして下さい</font></label>
                </div>
            </div>

            <div class="form-group">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <input class="form-control" id="UserId" name="UserId" type="text" placeholder="Eメール" />
            </div>
            <div class="form-group">
                <input class="form-control" id="Password" name="Password" type="password" placeholder="パスワード" />
            </div>
            <div class="form-group">
                <div class="input-group" style="text-align:left;">
                    <label class="control-label text-nowrap" id="lbl_CompletePayment">
                        <input id="AutoLogin" name="AutoLogin" type="checkbox" value="true" />
                        &nbsp;&nbsp;<label style="vertical-align: middle;"><font size="3">パスワードを表示する</font></label>
                    </label>
                    <br />
                    <label class="control-label text-nowrap" id="lbl_CompletePayment">
                        <input id="AutoLogin" name="AutoLogin" type="checkbox" value="true" />
                        &nbsp;&nbsp;<label style="vertical-align: middle;"><font size="3">ログインしたままにする</font></label>
                    </label>
                    <br />
                    <label class="control-label text-nowrap" id="lbl_CompletePayment">
                        <input id="AutoLogin" name="AutoLogin" type="checkbox" value="true" />
                        &nbsp;&nbsp;<label style="vertical-align: middle;">
                            <font size="3">ブラウザを閉じる時、オートログインを有効にする</font>
                        </label>
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-9" style="text-align: right">
                    <a class="btn btn-primary submit" href="/Sample/Index">ログイン</a>
                    <a class="btn btn-primary" href="#">キャンセル</a>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-12">
                    <div class="input-group" style="text-align:left;">
                        <label class="control-label text-nowrap" id="lbl_CompletePayment">
                            <input id="AutoLogin" name="AutoLogin" type="checkbox" value="true" />
                            &nbsp;&nbsp;<label style="vertical-align: middle;"><font size="3">個人情報保護方針に同意してログイン</font></label>
                        </label>
                        <br />
                        <label class="control-label text-nowrap">
                            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                            <font size="3">ユーザーID・パスワードを忘れた方は</font>
                            <a href="#" style="text-decoration: underline; color: #7f7fff; ">&nbsp;<font size="3">こちら</font></a>
                        </label>
                        @*<label class="control-label text-nowrap">
                            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;言語は<a href="#" style="text-decoration: underline;color: #ff7f7f; ">&nbsp;&nbsp;日本語</a>です。
                            異なる場合は<a href="#" style="text-decoration: underline; color: #ff7f7f;">&nbsp;&nbsp;こちら</a>をクリック
                        </label>*@
                        <label class="control-label text-nowrap">
                            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                            <font size="3">概算見積を希望の方は</font>
                            <a href="#" style="text-decoration: underline; color: #7f7fff; ">&nbsp;&nbsp;<font size="3">こちら</font></a>
                        </label>
                    </div>
                </div>
            </div>

            <div class="separator">
                <div class="clearfix"></div>
                <br />

                <div class="form-group" style="text-align:center;">
                    <h1><img src="~/Content/Images/ai-campus-logo.svg" width="100" height="16" /></h1>
                    <p>c2023 All Rights Reserved. Campus!</p>
                </div>
            </div>

        }
    </div>
</div>